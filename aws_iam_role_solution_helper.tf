resource "aws_iam_role" "solution_helper_role" {
  name = "${upper(var.common_tags["Environment"])}-SOLUTION-HELPER-ROLE"

  assume_role_policy = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Service": [
          "lambda.amazonaws.com"
        ]
      },
      "Action": "sts:AssumeRole"
    }
  ]
}
EOF
}